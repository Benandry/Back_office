{% extends 'base.html.twig' %}

{% block title %}Contrat index
{% endblock %}

{% block body %}

	<div class="p-8">
		<div class="flex justify-between items-center mb-6">
			<h1 class="text-2xl font-bold text-gray-800">Gestion des Contrat</h1>
			<a href="{{ path('app_contrat.create') }}" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition duration-300 flex items-center gap-2">
				<i class="fas fa-plus"></i>
				Créer nouveau
			</a>
		</div>
		<div class="bg-white rounded-xl shadow-sm overflow-hidden">
			<div class="min-w-full divide-y divide-gray-200">
				<table class="min-w-full divide-y divide-gray-200">
					<thead class="bg-gray-50">
						<tr>
							<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
							<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Description</th>
							<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">actions</th>
						</tr>
					</thead>
					<tbody>
						{% for contrat in contrats %}
							<tr>
								<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ contrat.name }}</td>
								<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ contrat.description }}</td>
								<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 space-x-2">

									<a href="{{ path('app_contrat.edit', {'id': contrat.id}) }}" class="text-green-600 hover:text-green-900 inline-flex items-center gap-1">

										<i class="fas fa-edit text-xs"></i>
									</a>

								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="11" class="px-6 py-4 text-center text-gray-500">
									Aucun enregistrement trouvé
								</td>
							</tr>

						{% endfor %}
					</tbody>
				</table>

			</div>
		</div>
	</div>
{% endblock %}
