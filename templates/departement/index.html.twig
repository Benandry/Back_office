{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	- Gestion des départements
{% endblock %}


{% block body %}
	<div class="p-8">
		<div class="flex justify-between items-center mb-6">
			<h1 class="text-2xl font-bold text-gray-800">Gestion des départements</h1>
			<a href="{{ path('app_departement.create') }}" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition duration-300 flex items-center gap-2">
				<i class="fas fa-plus"></i>
				Créer nouveau
			</a>
		</div>

		<div class="bg-white rounded-xl shadow-sm overflow-hidden">
			<div class="overflow-x-auto">
				<table class="min-w-full divide-y divide-gray-200">
					<thead class="bg-gray-50">
						<tr>
							<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom de département</th>
							<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
						</tr>
					</thead>
					<tbody class="bg-white divide-y divide-gray-200">
						{% for departement in departements %}
							<tr class="hover:bg-gray-50 transition-colors">
								<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ departement.name }}</td>
								<td class="px-6 py-4 whitespace-nowrap text-sm space-x-2 flex items-center">
									<a href="{{ path('app_departement.edit', {'id': departement.id}) }}" class="text-green-600 hover:text-green-900 inline-flex items-center gap-1">
										<i class="fas fa-edit text-xs mr-2"></i>
									</a>
									{{ include('departement/_delete_form.html.twig') }}
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="11" class="px-6 py-4 text-center text-gray-500">
									Aucun enregistrement trouvé
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
