{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Staffs
{% endblock %}
{% block page_actions %}
	  <a href="{{ path('app_staff_new') }}" class="btn btn-primary">New Staff</a>
{% endblock %}

{% block main %}
	<div class="table-responsive-md">
		<table class="table table-hover">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Name</th>
					<th scope="col">Last name</th>
					<th scope="col">Date of birth</th>
					<th scope="col">N° CIN </th>
					<th scope="col"> N° Matricule </th>
					<th scope="col">Adress</th>
					<th scope="col">Work Post</th>
					<th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for staff in staffs %}
					<tr>
						<th scope="row">{{ loop.index }}</th>
						<td>{{ staff.firstname }}</td>
						<td>{{ staff.lastname }}</td>
						<td>{{ staff.birth_|date("Y-m-d") }}</td>
						<td>{{ staff.number_cin }}</td>
						<td>{{ staff.number_matricule }}</td>
						<td>{{ staff.adresse_exact }}</td>
						<td>{{ staff.work_post }}</td>
						<td>
						<a class="btn btn-info" href="#" role="button">Edit</a>
						<a class="btn btn-danger" href="#" role="button">Delete</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>


{% endblock %}
