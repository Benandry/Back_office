{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	- Gestion des Staff
{% endblock %}


{% block body %}
	<div class="p-8">
		<div class="flex justify-between items-center mb-6">
			<h1 class="text-2xl font-bold text-gray-800">Gestion des Staff</h1>
			<a href="{{ path('app_staff.create') }}" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition duration-300 flex items-center gap-2">
				<i class="fas fa-plus"></i>
				Créer nouveau
			</a>
		</div>

		<div class="bg-white rounded-xl shadow-sm overflow-hidden">
			<div class="overflow-x-auto">
				<table class="min-w-full divide-y divide-gray-200">
					<thead class="bg-gray-50">
						<tr>
							<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Prénom</th>
							<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
							<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">CIN</th>
							<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Matricule</th>
							<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Poste</th>
							<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Téléphone</th>
							<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Horaire</th>
							<th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
						</tr>
					</thead>
					<tbody class="bg-white divide-y divide-gray-200">
						{% for staff in staffs %}
							<tr class="hover:bg-gray-50 transition-colors">
								<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ staff.firstname }}</td>
								<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ staff.lastname }}</td>
								<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-mono">{{ staff.numberCin }}</td>
								<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ staff.numberMatricule }}</td>
								<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ staff.workPost }}</td>
								<td class="px-6 py-4 whitespace-nowrap text-sm text-blue-600 hover:text-blue-800">
									<a href="tel:{{ staff.phoneNumber }}" class="hover:underline">{{ staff.phoneNumber }}</a>
								</td>
								<td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ staff.horary ? staff.horary|date('H\\hi') : '' }}</td>
								<td class="px-6 py-4 whitespace-nowrap text-sm space-x-2">
									<a href="{{ path('app_staff.show', {'id': staff.id}) }}" class="text-blue-600 hover:text-blue-900 inline-flex items-center gap-1">
										<i class="fas fa-eye text-xs"></i>
									</a>
									<a href="{{ path('app_staff.edit', {'id': staff.id}) }}" class="text-green-600 hover:text-green-900 inline-flex items-center gap-1">
										<i class="fas fa-edit text-xs"></i>
									</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="11" class="px-6 py-4 text-center text-gray-500">
									Aucun enregistrement trouvé
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endblock %}
